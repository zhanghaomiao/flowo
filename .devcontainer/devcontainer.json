{
  "name": "Flowo Unified Dev",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "./docker-compose.dev.yml"
  ],
  "service": "flowo-backend",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    }
  },

  "postCreateCommand": "cd backend && uv sync && cd ../frontend && npm install",

  "remoteEnv": {
    "PATH": "/workspace/backend/.venv/bin:${containerEnv:PATH}",
    "UV_NO_CACHE": "true" 
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",
        "dbaeumer.vscode-eslint",
        "prettier.prettier-vscode",
        "dsznajder.es7-react-js-snippets"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/backend/.venv/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "runArgs": ["--userns=keep-id"],
  "remoteUser": "vscode",

  "forwardPorts": [8000, 5173, 5432]
}